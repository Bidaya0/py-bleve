# Makefile for python interface for package bleve.
# File is generated by gopy. Do not edit.
# gopy build --output=../py_bleve -vm=python3 .

GOCMD=go
GOBUILD=$(GOCMD) build -mod=mod
GOIMPORTS=goimports
PYTHON=/home/bidaya0/.pyenv/shims/python3
LIBEXT=.so

# get the CC and flags used to build python:
GCC = $(shell $(GOCMD) env CC)
CFLAGS = -I/usr/include/python3.9
LDFLAGS = -L/usr/lib -lpython3.9 -lcrypt -lpthread -ldl  -lutil -lm -lm

all: gen build

gen:
	gopy gen -no-make --vm=python3 .

build:
	# build target builds the generated files -- this is what gopy build does..
	# this will otherwise be built during go build and may be out of date
	- rm bleve.c
	# goimports is needed to ensure that the imports list is valid
	$(GOIMPORTS) -w bleve.go
	# generate bleve_go$(LIBEXT) from bleve.go -- the cgo wrappers to go functions
	$(GOBUILD) -buildmode=c-shared -o bleve_go$(LIBEXT) bleve.go
	# use pybindgen to build the bleve.c file which are the CPython wrappers to cgo wrappers..
	# note: pip install pybindgen to get pybindgen if this fails
	$(PYTHON) build.py
	# build the _bleve$(LIBEXT) library that contains the cgo and CPython wrappers
	# generated bleve.py python wrapper imports this c-code package
	
	$(GCC) bleve.c  bleve_go$(LIBEXT) -o _bleve$(LIBEXT) $(CFLAGS) $(LDFLAGS) -fPIC --shared -w
	


